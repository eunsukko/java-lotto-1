    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="로또번호를 입력하세요." aria-label=" "
               aria-describedby="" name="lotto">
        <br/>
        <input type="text" class="form-control" placeholder="보너스번호를 입력하세요." aria-label=" "
               aria-describedby="" name="bonusNumber">
    </div>
    <button class="btn btn-primary btn-lg btn-block" type="submit">입력완료</button>
</form>

